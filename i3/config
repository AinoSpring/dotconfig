## Font
font pango: Noto Sans Regular 10

## Vars
set $mod Mod4

set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"

## Setup

exec --no-startup-id xmodmap -e "keycode 135 = Super_R" && xset -r 135
exec_always --no-startup-id $HOME/.config/polybar/launch.sh
exec_always --no-startup-id picom -b
exec --no-startup-id feh --bg-fill --randomize $HOME/backgrounds/*
exec --no-startup-id /usr/bin/dunst
exec --no-startup-id dex --autostart --environment i3
exec --no-startup-id /usr/lib/polkit-gnome/polkit-gnome-authentication-agent-1
exec --no-startup-id ~/.screenlayout/monitor.sh
exec --no-startup-id greenclip daemon > /dev/null
exec --no-startup-id unclutter > /dev/null

## Keybinds

# Menus
bindsym $mod+w exec rofi -combi-modi window#drun#ssh -theme glue_pro_blue -show combi
bindsym $mod+v exec pavucontrol
bindsym $mod+Shift+e exec rofi -show power-menu -modi power-menu:$HOME/.local/bin/rofi-power-menu

# Wallpaper
bindsym $mod+Mod1+s exec feh --recursive --bg-fill --randomize /usr/share/endeavouros/backgrounds/
bindsym $mod+Mod1+a exec feh --recursive --bg-fill --randomize /home/aino/Pictures/backgrounds/

# Audio
bindsym XF86AudioMute exec amixer sset 'Master' toggle
bindsym XF86AudioLowerVolume exec amixer sset 'Master' 5%-
bindsym XF86AudioRaiseVolume exec amixer sset 'Master' 5%+

bindsym $mod+XF86AudioLowerVolume exec amixer sset 'Master' 1%-
bindsym $mod+XF86AudioRaiseVolume exec amixer sset 'Master' 1%+

bindsym XF86AudioPlay exec playerctl play
bindsym XF86AudioPause exec playerctl pause
bindsym XF86AudioNext exec playerctl next
bindsym XF86AudioPrev exec playerctl previous

# Brightness
bindsym XF86MonBrightnessUp exec xbacklight +10 && notify-send "Brightness - $(xbacklight -get | cut -d '.' -f 1)%"
bindsym XF86MonBrightnessDown exec xbacklight -10 && notify-send "Brightness - $(xbacklight -get | cut -d '.' -f 1)%"

# Screenshot
bindsym Print exec scrot ~/%Y-%m-%d-%T-screenshot.png && notify-send "Screenshot saved to ~/$(date +"%Y-%m-%d-%T")-screenshot.png"

# Clipboard
bindsym $mod+c exec --no-startup-id rofi -modi "clipboard:greenclip print" -show clipboard \

# i3
bindsym $mod+Shift+c reload
bindsym $mod+Shift+r restart

# Programs
bindsym $mod+Return exec xfce4-terminal
bindsym $mod+q kill

# Navigation
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

bindsym $mod+r split horizontal
bindsym $mod+d split vertical

bindsym $mod+f fullscreen toggle

bindsym $mod+1 workspace $ws1
bindsym $mod+2 workspace $ws2
bindsym $mod+3 workspace $ws3; layout tabbed
bindsym $mod+4 workspace $ws4
bindsym $mod+5 workspace $ws5
bindsym $mod+6 workspace $ws6
bindsym $mod+7 workspace $ws7
bindsym $mod+8 workspace $ws8
bindsym $mod+9 workspace $ws9
bindsym $mod+0 workspace $ws10

bindsym $mod+Shift+1 move container to workspace $ws1
bindsym $mod+Shift+2 move container to workspace $ws2
bindsym $mod+Shift+3 move container to workspace $ws3
bindsym $mod+Shift+4 move container to workspace $ws4
bindsym $mod+Shift+5 move container to workspace $ws5
bindsym $mod+Shift+6 move container to workspace $ws6
bindsym $mod+Shift+7 move container to workspace $ws7
bindsym $mod+Shift+8 move container to workspace $ws8
bindsym $mod+Shift+9 move container to workspace $ws9
bindsym $mod+Shift+0 move container to workspace $ws10


# Resize
bindsym $mod+s mode "resize"

mode "resize" {
  bindsym h resize shrink width 10 px or 10 ppt
  bindsym j resize shrink height 10 px or 10 ppt
  bindsym k resize grow height 10 px or 10 ppt
  bindsym l resize grow width 10 px or 10 ppt

  bindsym Escape mode "default"
}

## Workspace assignment

# Programs
assign [class="discord"] $ws3
assign [class="thunderbird"] $ws3
assign [class="Spotify"] $ws4

# Focus if opened in other workspace
for_window [class=Xfce4-terminal] focus

exec --no-startup-id i3-msg "workspace 2; split horizontal; exec firefox"
exec --no-startup-id i3-msg "workspace 3; layout tabbed; exec discord; exec thunderbird"
exec --no-startup-id i3-msg "workspace 4; split horizontal; exec spotify-launcher"
exec --no-startup-id i3-msg "workspace 1; split horizontal; exec xfce4-terminal"

workspace_layout default

## Border
new_window pixel 1

## Colors

client.focused #000000 #000000 #FFFFFF #000000
client.focused_inactive #333333 #333333 #FFFFFF #000000
client.unfocused #333333 #333333 #FFFFFF #333333
client.urgent #cc241d #cc241d #ebdbb2 #282828
